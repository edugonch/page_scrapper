<div class="max-w-xl mx-auto px-4 py-8">
        <h1 class="text-2xl font-bold mb-6 text-gray-800">Add a New Page to Scrape</h1>

        <%= form_with model: @scraped_page, url: scraped_pages_path, data: { turbo: true }, class: "space-y-6" do |f| %>
            <div>
                <%= f.label :url, class: "block text-sm font-medium text-gray-700" %>
                <%= f.text_field :url, class: "mt-1 block w-full border border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500 p-2" %>
            </div>

            <div>
                <%= f.submit "Scrape this page", class: "bg-blue-600 hover:bg-blue-700 text-white font-semibold py-2 px-4 rounded shadow transition" %>
            </div>
        <% end %>
</div>